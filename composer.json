{
  "require": {
    "php": "^8.2",
    "flightphp/core": "^3.7",
    "phar-io/manifest": "^2.0",
    "leafs/session": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app"
    },
    "classmap": [
      "app/App.php"
    ],
    "files": [
      "app/utils.php"
    ]
  },
  "scripts": {
    "dev:win": "start php -S localhost:80",
    "db:install": "php app/commands/db-install.php",
    "test": "phpunit",
    "post-install-cmd": [
      "php -r \"if (!file_exists('.env.php')) copy('.env.dist.php', '.env.php');\""
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "filp/whoops": "^2.15"
  }
}
